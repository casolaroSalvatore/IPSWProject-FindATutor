                                <String fx:value="Latin" />
                                <String fx:value="Ancient Greek" />
                                <String fx:value="Economics" />
                                <String fx:value="Law" />
                                <String fx:value="Statistics" />
                                <String fx:value="Mathematical Analysis" />
                                <String fx:value="Engineering" />
                                <String fx:value="Art History" />
                                <String fx:value="Music Theory" />
                                <String fx:value="Psychology" />
                                <String fx:value="Sociology" />
                                <String fx:value="Business Administration" />
                            </FXCollections>
                        </items>
                    </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="26.0" prefWidth="426.0" spacing="25.0">
               <children>
            
                                          
                                                  <Label alignment="CENTER_RIGHT" prefHeight="26.0" prefWidth="90.0" text="Educational Title:" />
                    <TextField fx:id="educationalTitleField" prefHeight="26.0" prefWidth="298.0" promptText="e.g. Bachelor's in Math" />
               </children>
            </HBox>
            <HBox prefHeight="26.0" prefWidth="423.0" spacing="34.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="86.0" text="Hourly rate ($):" />
                  <TextField fx:id="hourlyRateField" prefHeight="26.0" prefWidth="298.0" promptText="Insert your houly rate" />
               </children>
            </HBox>
            <HBox prefHeight="51.0" prefWidth="423.0" spacing="30.0">
               <children>
                  <Label prefHeight="35.0" prefWidth="102.0" text="Lession options:" />
            
                    <VBox prefHeight="46.0" prefWidth="314.0" spacing="5.0">
                     <children>
                        <HBox prefHeight="27.0" prefWidth="191.0" spacing="8">
                           <children>
                                  <CheckBox fx:id="inPersonTutorCheck" text="Offers In-person Lessons" />
                                  <CheckBox fx:id="firstLessonFreeCheck" text="First Lesson is Free" />
                           </children>
                        </HBox>
                        <HBox prefHeight="21.0" prefWidth="191.0" spacing="22.0">
                           <children>
                                  <CheckBox fx:id="groupTutorCheck" text="Offers Group Sessions" />
                                  <CheckBox fx:id="onlineTutorCheck" text="Offers Online Lessons" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox layoutX="659.0" layoutY="394.0" prefHeight="18.0" prefWidth="353.0" spacing="8" style="-fx-alignment: center;">
         <children>
            <Label style="-fx-font-size: 12px; -fx-text-fill: #0e3aa1;" />
            <CheckBox fx:id="mondayCheck" text="Mon" />
            <CheckBox fx:id="tuesdayCheck" text="Tue" />
            <CheckBox fx:id="wednesdayCheck" text="Wed" />
