                     <children>
                        <Label prefHeight="18.0" prefWidth="34.0" style="-fx-font-size: 12px;" text="From" />
                        <DatePicker fx:id="startDatePicker" prefHeight="26.0" prefWidth="117.0" style="-fx-font-size: 12px;" />
                        <Label prefHeight="18.0" prefWidth="18.0" style="-fx-font-size: 12px;" text="To" />
                        <DatePicker fx:id="endDatePicker" prefHeight="26.0" prefWidth="119.0" style="-fx-font-size: 12px;" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox prefHeight="29.0" prefWidth="423.0" />
            <HBox prefHeight="26.0" prefWidth="426.0" spacing="67.0">
               <children>
            
                    <!-- Subject -->
                    <Label prefHeight="26.0" prefWidth="52.0" text="Subject:" />
                    <ComboBox fx:id="subjectComboBox" prefHeight="26.0" prefWidth="297.0">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Math" />
                                <String fx:value="Physics" />
                                <String fx:value="Chemistry" />
                                <String fx:value="Biology" />
                                <String fx:value="Computer Science" />
                                <String fx:value="Natural Sciences" />
