<AnchorPane prefHeight="864.0" prefWidth="1536.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.control.graphiccontrol.colored.SignUpGraphicControllerColored">

    <children>

        <!-- 1) Barra blu in alto -->
        <Rectangle arcHeight="5" arcWidth="5" fill="#0e3aa1" height="60" stroke="BLACK" strokeType="INSIDE" strokeWidth="0" width="1600.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="-518.0" AnchorPane.topAnchor="0" />

        <!-- 2) Logo “FindATutor” -->
        <Label text="FindATutor" textFill="WHITE" AnchorPane.leftAnchor="14" AnchorPane.topAnchor="14">
            <font><Font name="System Bold" size="18" /></font>
        </Label>

        <!-- 3) HBox con tre pulsanti, centrato orizzontalmente -->
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="1536.0" spacing="20" style="-fx-border-width:2; -fx-background-radius:8; -fx-border-radius:8; -fx-padding:6;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
            <Button mnemonicParsing="false" onAction="#goToHome" prefHeight="34" prefWidth="276" text="Return to Home">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/home.png" /></ImageView>
                </graphic>
            </Button>
            <Button fx:id="manageNoticeBoardButton" mnemonicParsing="false" onAction="#goToManageNoticeBoard" prefHeight="34" prefWidth="276" text="Manage Notice Board">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/modify-calendar.png" /></ImageView>
                </graphic>
            </Button>
            <Button fx:id="leaveASharedReviewButton" mnemonicParsing="false" prefHeight="34" prefWidth="276" text="Leave a Shared Review">
                <graphic>
                    <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/review.png" /></ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Titolo -->
        <Label alignment="CENTER" layoutX="449.0" layoutY="174.0" prefHeight="35.0" prefWidth="635.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Complete the Sign Up" textFill="#0e3aa1" />

        <!-- Pulsante di Registrazione -->
        <Button fx:id="registerButton" layoutX="697.0" layoutY="729.0" onAction="#handleTutorData" prefHeight="26.0" prefWidth="142.0" text="Complete the Sign Up" />
        <Label layoutX="14.0" prefHeight="47.0" prefWidth="96.0" text="FindATutor" textFill="WHITE">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label alignment="CENTER" layoutX="448.0" layoutY="211.0" prefHeight="22.0" prefWidth="641.0" text="Please insert your crendentials in order to create a new account as a Tutor:" />

        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="544.0" layoutX="447.5" layoutY="170.4" stroke="#0e3aa1" strokeType="INSIDE" strokeWidth="2.0" width="641.0" />

        <VBox layoutX="559.0" layoutY="290.0" prefHeight="219.0" prefWidth="419.0" spacing="30.0">
         <children>
            <HBox prefHeight="26.0" prefWidth="423.0" spacing="100.0">
               <children>
            
                    <!-- Città -->
                    <Label prefHeight="26.0" prefWidth="34.0" text="City:" />
                    <TextField fx:id="locationField" prefHeight="26.0" prefWidth="298.0" promptText="Insert your city" />
               </children>
            </HBox>
            <HBox prefHeight="16.0" prefWidth="423.0" spacing="30.0">
               <children>
            
                    <!-- Availabilty -->
                    <Label text="Time availabilty:" />
