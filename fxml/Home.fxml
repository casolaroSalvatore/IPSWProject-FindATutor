<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.control.graphiccontrol.colored.HomeGraphicControllerColored">

   <!-- 1) Barra blu in alto, full‑width -->
   <Pane prefHeight="60.0" style="-fx-background-color:#0e3aa1;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

   <!-- Logo a sinistra -->
   <Label prefHeight="60.0" prefWidth="96.0" text="FindATutor" textFill="WHITE" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="0.0">
      <font><Font name="System Bold" size="18" /></font>
   </Label>

   <!-- 2) SignUp / LogIn / LogOut in alto a destra -->
   <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="126.0" spacing="10" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="0.0">
      <Button fx:id="signUpButton" onAction="#goToSignUp" text="Sign up" />
      <Button fx:id="logInButton" onAction="#goToLogin" prefHeight="26.0" prefWidth="59.0" text="Log In" />
   </HBox>
   <Button fx:id="logOutButton" layoutY="16.0" onAction="#handleLogOut" prefHeight="26.0" prefWidth="59.0" text="Log Out" visible="false" AnchorPane.rightAnchor="11.0" AnchorPane.topAnchor="16.0" />

   <!-- Messaggio di benvenuto -->
   <Label fx:id="welcomeLabel" alignment="CENTER_RIGHT" contentDisplay="RIGHT" prefHeight="20.0" prefWidth="232.0" textAlignment="RIGHT" textFill="WHITE" visible="false" AnchorPane.rightAnchor="110.0" AnchorPane.topAnchor="20.0">
      <font><Font size="14" /></font>
   </Label>

   <!-- 3) HBox con tre pulsanti, full‑width e centrato -->
   <HBox alignment="CENTER" layoutX="-4.0" layoutY="83.0" prefHeight="34.0" prefWidth="1030.0" spacing="20" AnchorPane.leftAnchor="-4.0" AnchorPane.rightAnchor="-1.599999999999909" AnchorPane.topAnchor="83.0">
      <Button prefWidth="250.0" text="Return to Home">
         <graphic><ImageView fitHeight="26" fitWidth="26"><Image url="@../images/home.png" /></ImageView></graphic>
      </Button>

      <Button fx:id="manageNoticeBoardButton" onAction="#goToManageNoticeBoard" prefWidth="250.0" text="Manage Notice Board">
         <graphic><ImageView fitHeight="26" fitWidth="26"><Image url="@../images/modify-calendar.png" /></ImageView></graphic>
      </Button>

      <Button fx:id="leaveASharedReviewButton" onAction="#goToLeaveASharedReview" prefWidth="250.0" text="Leave a Shared Review">
         <graphic><ImageView fitHeight="26" fitWidth="26"><Image url="@../images/review.png" /></ImageView></graphic>
      </Button>
   </HBox>

   <Circle fx:id="redCircle1" fill="RED" layoutX="670.0" layoutY="78.0" pickOnBounds="false" radius="8" stroke="RED" visible="false" />

   <Label fx:id="redDotLabel1" alignment="CENTER" layoutX="664.0" layoutY="71.0" mouseTransparent="true" textFill="WHITE" visible="false">
      <font><Font name="System Bold" size="10" /></font>
   </Label>

   <!-- ▸ Badge per “Leave a Shared Review” -->
   <Circle fx:id="redCircle2" fill="RED" layoutX="940.0" layoutY="78.0" pickOnBounds="false" radius="8" stroke="RED" visible="false" />

   <Label fx:id="redDotLabel2" alignment="CENTER" layoutX="934.0" layoutY="71.0" mouseTransparent="true" textFill="WHITE" visible="false">
      <font><Font name="System Bold" size="10" /></font>
   </Label>

   <!-- 4‑5) Titolo e sottotitolo centrali -->
   <VBox alignment="TOP_CENTER" spacing="8" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="132.0">
      <Label text="Welcome on FindATutor!">
         <font><Font size="20" /></font>
      </Label>
      <HBox alignment="CENTER" spacing="5">
         <Label text="Find the" />
         <Label text="best tutor" textFill="#0e3aa1">
            <font><Font name="System Bold" size="12" /></font>
         </Label>
         <Label text="for you:" />
      </HBox>
   </VBox>

   <!-- 6) Barra di ricerca – max 1000 px ma centrata e fluida -->
   <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="210.0">
      <HBox alignment="CENTER_LEFT" maxWidth="1000" spacing="10" style="-fx-background-color:#f5f5f5; -fx-border-color:#0e3aa1; -fx-border-width:2; -fx-background-radius:8; -fx-border-radius:8; -fx-padding:6;">
         <!-- Where -->
         <HBox alignment="CENTER_LEFT" spacing="5">
            <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/location.png" /></ImageView>
            <TextField fx:id="locationField" promptText="Where do you live?" style="-fx-background-color:transparent; -fx-border-width:0; -fx-font-size:12px;" HBox.hgrow="ALWAYS" />
         </HBox>
         <Line endY="35" stroke="#0e3aa1" strokeWidth="2" />
         <!-- Date From/To -->
         <HBox alignment="CENTER_LEFT" spacing="5">
            <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/calendar.png" /></ImageView>
            <Label text="From" />
            <DatePicker fx:id="startDatePicker" style="-fx-font-size:12px;" />
            <Label text="To" />
            <DatePicker fx:id="endDatePicker" style="-fx-font-size:12px;" />
         </HBox>
         <Line endY="35" stroke="#0e3aa1" strokeWidth="2" />
         <!-- Subject -->
         <HBox alignment="CENTER_LEFT" spacing="5">
            <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/education.png" /></ImageView>
            <TextField fx:id="subjectField" promptText="Need help with?" style="-fx-background-color:transparent; -fx-border-width:0; -fx-font-size:12px;" HBox.hgrow="ALWAYS" />
         </HBox>
         <Line endY="35" stroke="#0e3aa1" strokeWidth="2" />
         <!-- Search -->
         <Button onAction="#handleSearch" style="-fx-background-color:transparent;">
            <graphic><ImageView fitHeight="26" fitWidth="29" preserveRatio="true">
               <Image url="@../images/icon-search.png" /></ImageView></graphic>
         </Button>
      </HBox>
   </HBox>

   <!-- 7) Frequenza e giorni – max 800 px centrato -->
   <HBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="282.0">
      <HBox alignment="CENTER_LEFT" maxWidth="900" spacing="10" style="-fx-background-color:#f5f5f5; -fx-border-color:#0e3aa1; -fx-border-width:2; -fx-background-radius:8; -fx-border-radius:8; -fx-padding:6;">
         <HBox alignment="CENTER_LEFT" spacing="5">
            <ImageView fitHeight="26" fitWidth="26"><Image url="@../images/calendar.png" /></ImageView>
            <TextField fx:id="frequencyField" maxWidth="78.0" prefHeight="26.0" prefWidth="78.0" promptText="Times/week" style="-fx-background-color:transparent; -fx-border-width:0; -fx-font-size:12px;" />
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="8">
            <Label style="-fx-font-size:12px; -fx-text-fill:#0e3aa1;" text="Days:" />
            <CheckBox fx:id="mondayCheck" text="Mon" />
            <CheckBox fx:id="tuesdayCheck" text="Tue" />
            <CheckBox fx:id="wednesdayCheck" text="Wed" />
            <CheckBox fx:id="thursdayCheck" text="Thu" />
            <CheckBox fx:id="fridayCheck" text="Fri" />
            <CheckBox fx:id="saturdayCheck" text="Sat" />
            <CheckBox fx:id="sundayCheck" text="Sun" />
         </HBox>
      </HBox>
   </HBox>

   <!-- ▸ Sezione promozionale  -->
   <VBox fx:id="promoSection" alignment="TOP_CENTER" spacing="40"
         AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="350.0">

      <!-- Headline verde di invito -->
      <VBox alignment="TOP_CENTER" spacing="10" maxWidth="1000">
         <Label wrapText="true"
                text="Are you looking for expert guidance in your academic journey? You've come to the right place!"
                style="-fx-text-fill:#19c78f;
                    -fx-font-size:17px;
                    -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                    -fx-font-weight:bold;
                    -fx-text-alignment:center;"/>

         <Label wrapText="true"
                text="Our platform connects students with tutors specialized in a wide range of university and school subjects."
                style="-fx-text-fill:#19c78f;
                    -fx-font-size:17px;
                    -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                    -fx-font-weight:bold;
                    -fx-text-alignment:center;"/>
      </VBox>

      <!-- Bullet list -->
      <VBox alignment="TOP_LEFT" spacing="8" maxWidth="1000">
         <Label text="• Browse our list of tutors;"
                style="-fx-font-size:15px;
                    -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                    -fx-text-fill:#0e3aa1;
                    -fx-font-weight:bold;"/>

         <Label text="• Find the perfect match based on your subject and preferences;"
                style="-fx-font-size:15px;
                    -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                    -fx-text-fill:#0e3aa1;
                    -fx-font-weight:bold;"/>

         <Label text="• Schedule sessions at your convenience."
                style="-fx-font-size:15px;
                    -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                    -fx-text-fill:#0e3aa1;
                    -fx-font-weight:bold;"/>
      </VBox>

      <!-- Due immagini affiancate con ombra e angoli arrotondati -->
      <HBox alignment="CENTER" spacing="60" maxWidth="1000">
         <!-- Immagine 1 -->
         <ImageView fitHeight="250" fitWidth="350" preserveRatio="true"
                    style="-fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.1, 0, 4);">
            <image>
               <Image url="@../images/tutor1.png"/>
            </image>
            <clip>
               <Rectangle width="350" height="250" arcWidth="28" arcHeight="28"/>
            </clip>
         </ImageView>

         <!-- Immagine 2 -->
         <ImageView fitHeight="250" fitWidth="350" preserveRatio="true"
                    style="-fx-effect:dropshadow(gaussian, rgba(0,0,0,0.25), 10, 0.1, 0, 4);">
            <image>
               <Image url="@../images/tutor2.png"/>
            </image>
            <clip>
               <Rectangle width="350" height="250" arcWidth="28" arcHeight="28"/>
            </clip>
         </ImageView>
      </HBox>

      <!-- Slogan finale -->
      <Label wrapText="true" maxWidth="1000"
             text="Empower your learning with personalized support.\nSuccess starts here!"
             style="-fx-text-fill:#0e3aa1;
                 -fx-font-size:26px;
                 -fx-font-family:'Segoe UI','Helvetica Neue',sans-serif;
                 -fx-font-weight:bold;
                 -fx-text-alignment:center;"/>
   </VBox>

</AnchorPane>
